<% if (!gameId){ %>
    <title>Chischas!♟️</title>
<% } else { %>
    <title>MATCH⚔️ || Chischas!♟️</title>
<% } %>

<%- include('header') %>

<script src="/javascript/chischas/chischas.js" defer></script>

<% if (!gameId){ %>
<script src="/javascript/chischas/conexion/crearLink.js" defer></script>
<div id="inicio_partida" style="text-align: center; margin-top: 20px;">
    <h1>¡Bienvenido a Chischas!♟️</h1>
    <p>Comienza una nueva partida o comparte el enlace con tus amigos.</p>
    <button id="crearLink" style="padding: 10px 20px; font-size: 16px; cursor: pointer;">Crear link de partida</button>
    <p id="link" style="margin-top: 10px; font-style: italic; color: gray;">Aún no se ha generado ningún link de partida</p>
</div>
<% } %>

<% if (gameId){ %>
<div style="text-align: center; margin-top: 20px;">
    <h1>¡Partida en curso!⚔️</h1>
    <p>Id de partida: <strong><%= gameId %></strong></p>
</div>
<%- include('juego') %>
<% } %>

<ul id="messages" style="list-style-type: none; padding: 0; margin-top: 20px; text-align: center;"></ul>
